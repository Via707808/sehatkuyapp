<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/radius_allbluei_outline"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_tekstopik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum"
        android:textSize="30dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tv_kategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum"
        android:padding="10dp"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:background="@drawable/radius_allbluev"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/bluev"/>
    <TextView
        android:id="@+id/tv_deskripsitopik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum"
        android:padding="10dp"/>
    <RelativeLayout
        android:id="@+id/rl_nav3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_deskripsidiskusi"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/iv_komentar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_komentarbiru"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/tv_komentar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.30k"
            android:layout_toRightOf="@+id/iv_komentar"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:padding="3dp"
            />

        <ImageView
            android:id="@+id/iv_hati"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_heartmerahpenuh"
            android:layout_toRightOf="@+id/tv_komentar"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/tv_hati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.30k"
            android:layout_toRightOf="@+id/iv_hati"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:padding="3dp"/>
        <ImageView
            android:id="@+id/iv_reply"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_replybiru"
            android:layout_toRightOf="@+id/tv_hati"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.30k"
            android:layout_toRightOf="@+id/iv_reply"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:padding="3dp"/>

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_sharebiru"
            android:layout_toRightOf="@+id/tv_reply"
            android:padding="3dp"/>

    </RelativeLayout>

</LinearLayout>