<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addactivity.AddDokter">

    <TextView
        android:id="@+id/tv_nama2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama"
        />

    <EditText
        android:id="@+id/et_namadokter1"
        android:layout_below="@+id/tv_nama2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan Nama..."/>

    <TextView
        android:id="@+id/tv_spesialis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spesialis"
        android:layout_below="@id/et_namadokter1"
        />

    <EditText
        android:id="@+id/et_spesialis2"
        android:layout_below="@+id/tv_spesialis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan Spesialis..."/>

    <TextView
        android:id="@+id/tv_str1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nomor STR"
        android:layout_below="@+id/et_spesialis2"
        />

    <EditText
        android:id="@+id/et_str2"
        android:layout_below="@+id/tv_str1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan Nomor STR..."/>

    <TextView
        android:id="@+id/tv_komentar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Komentar"
        android:layout_below="@+id/et_str2"
        />

    <EditText
        android:id="@+id/et_komentar3"
        android:layout_below="@+id/tv_komentar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan komentar..."/>

    <TextView
        android:id="@+id/tv_biaya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Biaya"
        android:layout_below="@+id/et_komentar3"
        />

    <EditText
        android:id="@+id/et_biaya"
        android:layout_below="@+id/tv_biaya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan Biaya..."/>

    <ImageView
        android:id="@+id/iv_preview_dokter"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/et_komentar3"
        android:src="@drawable/ic_add_image"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_add_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_add_image"
            />

        <Button
            android:id="@+id/btn_kirim_dokter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kirim"
            />

    </LinearLayout>

</RelativeLayout>